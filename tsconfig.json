{
	"compilerOptions": {
		"target": "ES2020",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "lib",
		"module": "ES2020",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}